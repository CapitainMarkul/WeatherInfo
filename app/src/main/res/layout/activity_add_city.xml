<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import
            alias="v"
            type="android.view.View"/>

        <import type="java.util.List"/>

        <variable
            name="cityView"
            type="com.tensor.dapavlov1.tensorfirststep.data.viewmodels.CityView"/>

        <variable
            name="isLoading"
            type="boolean"/>

        <variable
            name="isFirstLaunch"
            type="boolean"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:id="@+id/ScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--MainWeather-->
            <FrameLayout
                android:id="@+id/root_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="55dp">

                <include
                    android:id="@+id/cv_nothing_weather"
                    layout="@layout/card_weather_nothing_find"
                    android:visibility="@{isFirstLaunch || cityView != null &amp;&amp; !isLoading ? v.INVISIBLE : v.VISIBLE}"/>

                <include
                    android:id="@+id/cv_weather_city"
                    layout="@layout/item_card_full_info_weather"
                    android:visibility="@{cityView != null &amp;&amp; !isLoading ? v.VISIBLE : v.INVISIBLE}"
                    app:cityView="@{cityView}"/>

                <include
                    android:id="@+id/cv_searching"
                    layout="@layout/card_weather_searching"
                    android:visibility="@{isLoading ? v.VISIBLE : v.INVISIBLE}"/>
            </FrameLayout>
        </ScrollView>

        <include
            android:id="@+id/tool_bar"
            layout="@layout/toolbar_main"/>

        <!--<LinearLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerInParent="true">-->

        <!--<include-->
        <!--android:id="@+id/layout_progress_bar"-->
        <!--layout="@layout/layout_progress_bar"-->
        <!--android:visibility="@{isLoading ? v.VISIBLE : v.INVISIBLE}"/>-->
        <!--</LinearLayout>-->
    </RelativeLayout>
</layout>
